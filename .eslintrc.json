{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-extra-semi":"error",
        "indent": ["warn", 2],
        "no-mixed-spaces-and-tabs": "warn",
        "no-tabs": "warn",
        "space-before-blocks": "warn",
        "@typescript-eslint/no-unused-vars": "warn",
        "@typescript-eslint/semi": "off"
    }
}
